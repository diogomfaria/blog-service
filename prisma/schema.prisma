datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

model Post {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  author    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}